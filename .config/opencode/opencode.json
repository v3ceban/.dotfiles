{
    "$schema": "https://opencode.ai/config.json",
    "theme": "catppuccin",
    "share": "disabled",
    "autoupdate": true,
    "instructions": [
        "CLAUDE*.md",
        ".cursor/rules/*.md"
    ],
    "keybinds": {
        "messages_half_page_up": "alt+k",
        "messages_half_page_down": "alt+j",
        "app_exit": "ctrl+c,ctrl+q",
        "terminal_suspend": "none",
        "input_undo": "ctrl+z",
        "input_redo": "ctrl+r"
    }
}
