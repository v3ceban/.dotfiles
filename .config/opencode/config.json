{
    "$schema": "https://opencode.ai/config.json",
    "theme": "catppuccin",
    "model": "github-copilot/claude-sonnet-4",
    "disabled_providers": [
        "openai",
        "deepseek"
    ],
    "autoshare": false,
    "autoupdate": true,
    "keybinds": {
        "leader": "ctrl+space",
        "messages_page_up": "ctrl+alt+pgup",
        "messages_page_down": "ctrl+alt+pgdown",
        "messages_half_page_up": "pgup",
        "messages_half_page_down": "pgdown",
        "app_exit": "ctrl+c,<leader>q,ctrl+q"
    },
    "mcp": {
        "figma": {
            "enabled": true,
            "type": "remote",
            "url": "http://127.0.0.1:3845/sse"
        }
    }
}
