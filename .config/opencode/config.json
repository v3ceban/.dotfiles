{
    "$schema": "https://opencode.ai/config.json",
    "theme": "catppuccin",
    "model": "github-copilot/gpt-4.1",
    "instructions": [
        "CLAUDE*.md"
    ],
    "disabled_providers": [
        "openai",
        "deepseek"
    ],
    "autoupdate": true,
    "share": "disabled",
    "keybinds": {
        "leader": "ctrl+space",
        "messages_page_up": "ctrl+alt+pgup",
        "messages_page_down": "ctrl+alt+pgdown",
        "messages_half_page_up": "pgup,alt+k",
        "messages_half_page_down": "pgdown,alt+j",
        "messages_first": "home,ctrl+g",
        "messages_last": "end,ctrl+alt+g",
        "session_share": "none",
        "app_exit": "ctrl+c,<leader>q,ctrl+q"
    },
    "permission": {
        "edit": "ask",
        "bash": {
            "git status*": "allow",
            "/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME status*": "allow",
            "git diff*": "allow",
            "/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME diff*": "allow",
            "git log*": "allow",
            "/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME log*": "allow",
            "git show*": "allow",
            "/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME show*": "allow",
            "git remote": "allow",
            "/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME remote": "allow",
            "git remote -v": "allow",
            "/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME remote -v": "allow",
            "ls*": "allow",
            "pwd": "allow",
            "cat*": "allow",
            "head*": "allow",
            "tail*": "allow",
            "less*": "allow",
            "more*": "allow",
            "find*": "allow",
            "grep*": "allow",
            "du*": "allow",
            "df*": "allow",
            "*": "ask"
        },
        "webfetch": "allow"
    }
}
